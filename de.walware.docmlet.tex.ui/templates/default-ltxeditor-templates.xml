<?xml version="1.0" encoding="UTF-8"?>

<templates>

<!-- Default -->

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_begin"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="begin"
		description="%template_TexDefault_begin_description"
		autoinsert="true"
>\begin{${environment}}${cursor}
\end{${environment}}
</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_enumerate"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="enumerate"
		description="%template_TexDefault_enumerate_description"
		autoinsert="true"
>\begin{enumerate}
  \item ${cursor}
\end{enumerate}
</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_itemize"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="itemize"
		description="%template_TexDefault_itemize_description"
		autoinsert="true"
>\begin{itemize}
  \item ${cursor}
\end{itemize}
</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_description"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="description"
		description="%template_TexDefault_description_description"
		autoinsert="true"
>\begin{description}
  \item[${item}] ${cursor}
\end{description}
</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_table"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="table"
		description="%template_TexDefault_table_description"
		autoinsert="true"
>\begin{table}
\begin{tabular}{${columns}}
${cursor}
\end{tabular}
\caption{${tablecaption}}
\label{${tablelabel}}
\end{table}
</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_figure"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="figure"
		description="%template_TexDefault_figure_description"
		autoinsert="true"
>%comment_char \usepackage{graphics} is needed for \includegraphics
\begin{figure}[htp]
\begin{center}
  \includegraphics[width=${figureWidth}]{${filename}}
  \caption[${labelInTOC}]{${figureCaption}}
  \label{${figureLabel}}
\end{center}
\end{figure}
</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_textrm"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="rm"
		description="%template_LtxDefault_textrm_description"
		autoinsert="true"
>\textrm{${word_selection}${}}${cursor}</template>

<template
		id="de.walware.docmlet.tex.templates.LtxDefault_textsf"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
