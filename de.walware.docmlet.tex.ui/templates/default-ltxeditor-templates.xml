		id="de.walware.docmlet.tex.templates.LtxDefault_textsl"
		context="de.walware.docmlet.tex.templates.LtxEditorDefaultContextType"
		name="sl"
		description="%template_LtxDefault_textsl_description"
		autoinsert="true"
		enabled="false"
